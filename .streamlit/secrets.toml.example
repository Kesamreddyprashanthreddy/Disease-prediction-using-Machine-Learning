# MongoDB Configuration
# Copy this file to secrets.toml and add your actual MongoDB connection string

[mongodb]
# Your MongoDB connection string
# Example for MongoDB Atlas:
# connection_string = "mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"
# Example for local MongoDB:
# connection_string = "mongodb://localhost:27017/"
connection_string = "YOUR_MONGODB_CONNECTION_STRING_HERE"

# Database name
database = "medical_diagnosis_db"

# Optional: Collection names (defaults will be used if not specified)
users_collection = "users"

